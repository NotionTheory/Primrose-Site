*
  box-sizing: border-box


html, body
  margin:0
  padding:0


body
  font-family: -apple-system, '.SFNSText-Regular', 'San Francisco', 'Roboto', 'Segoe UI', 'Helvetica Neue', 'Lucida Grande', sans-serif


h2
  margin: 0 auto 1em 0
  padding-top: calc(32px + 1em)
  text-align: center
  text-transform: uppercase


ul 
  list-style: circle


#demo
  position:relative
  width: 100%
  height: 40vw


iframe 
  border: none
  width: 100%


#frontBuffer 
  height: 100%


#example
  height: 20em


#overlay
  box-sizing: border-box
  position: absolute
  width: 100%
  height: 100%
  top: 0
  left: 0
  padding-top: 15vw
  text-align: center
  color: white
  text-shadow: 0 0 5px purple
  pointer-events: none


#overlay > img 
  max-width: 50%


#overlay > p
  font-size: 125%
  display: block
  text-transform: uppercase


#overlay > a 
  display: inline-block
  cursor: pointer


header
  left: 0
  top: 0
  width: 100%
  background-color: white
  border-bottom: solid 1px #ccc
  opacity: 0.9


#logo 
  margin: 0.25em 1em


header * 
  display: inline-block
  padding: 0
  margin: 0
  vertical-align: middle

      
header > nav > ul 
  list-style: none


header a 
  border: none
  height: auto
  padding: 0.25em 1em


a 
  color: black


main article 
  margin: 0 auto
  padding-bottom: 1em
  max-width: 1000px
  width: 75%
  line-height: 1.5

      
main p 
  margin: 0 0 1em 0


main > section:nth-child(4n + 1)
  background-color: white


main > section:nth-child(4n + 1) li:hover
  background-color: rgba(0, 0, 0, 0.125)


main > section:nth-child(4n + 1), 
main > section:nth-child(4n + 1) a
  color: black


main > section:nth-child(4n + 2)
  background-color: #E1CFF6


main > section:nth-child(4n + 2) li:hover
  background-color: rgba(255, 0, 0, 0.125)


main > section:nth-child(4n + 2), 
main > section:nth-child(4n + 2) a
  color: black


main > section:nth-child(4n + 3)
  background-color: #333


main > section:nth-child(4n + 3) li:hover
  background-color: rgba(255, 255, 255, 0.125)


main > section:nth-child(4n + 3), 
main > section:nth-child(4n + 3) a
  color: white


main > section:nth-child(4n + 4)
  background-color: #7FDCDF


main > section:nth-child(4n + 4) li:hover
  background-color: transparent


main > section:nth-child(4n + 4), 
main > section:nth-child(4n + 4) a
  color: black


section li a small 
  font-weight: normal
  font-style: italic


section > article > ul
  list-style: none
  padding: 0
  margin: 0


section > article > ul > li 
  display: block
  padding: 0
  margin: 0
  padding: 1em


section > article > ul > li > a 
  display: block
  font-size: 125%
  font-weight: bold
  text-decoration: none


section > article > ul > li img
  display: block
  width: 100%
  margin: 0 auto


#teamInfo img
  border-radius:50%


.button 
  display: block
  width: 100%
  text-align: center
  text-decoration: none
  border: solid 2px black
  padding: 0.5em
  margin: 0.5em 0
  cursor: pointer
  line-height: 1.5
  font-weight: bold


.button small 
  font-weight: normal
  font-style: italic


.button:hover
  border-color: white


.primary.button
  background-color: #7FDCDF


.button.secondary
  background-color: #853B9E
  color: white


footer
  width:100%
  padding:0
  margin:0
  text-align:center
  font-weight:bold


footer > * 
  display: inline-block
  vertical-align: middle


@media(min-width:900px)
  #intro div:nth-child(2)
    -webkit-column-count: 2
    -moz-column-count: 2
    -o-column-count: 2
    -ms-column-count: 2
    column-count: 2
  

  section > article > ul > li
    display: inline-block
    vertical-align: top
    width: calc(33% - 10px)
    list-style: none
  

  main > section:last-child
    margin-bottom: 3em