doctype html
html
  head
    meta(charset="utf-8")
    if debug
      each file in frameworkFiles
        script(type="text/javascript", src=fileRoot + file)
    else
      script(type="text/javascript", src= fileRoot + "PrimroseDependencies" + jsExt)
      script(type="text/javascript", src= fileRoot + "Primrose" + jsExt)

    style(type="text/css")
      | html, body, #frontBuffer {
      |   position: absolute;
      |   height: 100%;
      |   width: 100%;
      |   padding: 0;
      |   margin: 0;
      |   border: 0;
      |   left: 0;
      |   top: 0;
      | } 
      | #frontBuffer {
      |   background-repeat: no-repeat;
      |   background-color: #eee;
      |   background-size: cover;
      |   cursor: wait;
      |   background-image:url(#{fileRoot}doc/editorVR/screenshot.jpg);
      | }
  body
    canvas#frontBuffer
    pre#editorContainer
    script#monitor_mtl(type="text/prs.wavefront-mtl")
      include models/monitor.mtl

    script#monitor_obj(type="text/prs.wavefront-obj")
      include models/monitor.obj

    script#monitor_mtl(type="text/prs.wavefront-mtl")
      include models/cardboard.mtl

    script#monitor_obj(type="text/prs.wavefront-obj")
      include models/cardboard.obj

    script(type="text/javascript", async, defer, src=fileRoot + "doc/editorVR/app.js")